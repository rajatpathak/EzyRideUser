<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appentus.ezyrideuser">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApplicaiton"
        android:allowBackup="true"
        android:icon="@drawable/ic_ezylauncher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_ezylauncher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginWithPhone"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".PasswordActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MapActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".UserDetails"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Payment" />
        <activity android:name=".EditProfile" />
        <activity android:name=".TripHistory" />
        <activity android:name=".testAut"></activity>
    </application>

</manifest>