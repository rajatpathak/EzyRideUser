<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/rootFrame">

    <LinearLayout
        android:id="@+id/llphone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:paddingTop="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMoving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:hint="sdfsdfdsf"
            android:text="@string/add_money"
            android:textColor="#262626"
            android:textColorHint="#DADBDF"
            android:textSize="18sp" />
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:hint="Amount (R)"
            android:inputType="phone"
            android:padding="16dp"
            android:textColorHint="#DADBDF"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/add100"
                android:padding="4dp"
                android:background="@drawable/normal_round_corner"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:padding="4dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+NGN"
                android:textSize="10dp"/>
            <TextView
                android:padding="4dp"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20dp"/>
            </LinearLayout>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/add200"
                android:padding="4dp"
                android:background="@drawable/normal_round_corner"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+NGN"
                    android:textSize="10dp"/>
                <TextView
                    android:padding="4dp"

                    android:textColor="@color/black"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="20dp"/>
            </LinearLayout>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/add300"
                android:padding="4dp"
                android:background="@drawable/normal_round_corner"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+NGN"
                    android:padding="4dp"
                    android:textSize="10dp"/>
                <TextView
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:textSize="18dp"
            android:padding="18dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Proceed to Add Money"
            android:backgroundTint="@color/light_green"/>


        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Balance---"
            android:textSize="18dp"
            android:padding="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/ivback"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="15dp"
        android:layout_marginLeft="15sp"
        android:tint="@color/black"
        android:background="@drawable/cancel_round"/>

</FrameLayout>